<!DOCTYPE html>
<html lang="en">

<head>
  {{>head}}
  <style>
    .error {
      background-color: red;
      color: white;
      padding: "20px";
      display: none
    }
  </style>
</head>

<body class="login">


  <main class="form-signin">
    <form action="login" method="post">

      <h1 class="h3 mb-3 text-center">Acceso al panel de control</h1>

      <div class="form-floating">
        <input type="email" class="form-control" id="username" placeholder="name@example.com" name="username">
        <label for="username">Usuario</label>
      </div>
      <div class="form-floating">
        <input type="password" class="form-control" id="password" placeholder="Contraseña" name="password">
        <label for="password">Contraseña</label>
      </div>


      <button class="w-100 btn btn-lg btn-info" type="submit">Entrar</button>
    </form>
    <p class="error">Usuario o contraseña incorrecta</p>
    <a href="/admin">IR A ADMIN (MODO DEV)</a>

  </main>

  <script>

    const usuario = "admin@gmail.com";
    const password = "123";
    const btn = document.querySelector("button");
    console.log(btn);
    btn.addEventListener("click", event =>
    {
      event.preventDefault();
      console.log(btn);
      const error = document.querySelector(".error");
      const valueUser = document.querySelector("#username").value;
      const valuePassword = document.querySelector("#password").value;
      if (usuario == valuePassword && password == valuePassword)
      {
        window.location.href("http://localhost:3000/admin");
      }
      else
      {
        error.style.display("block");
      }
    }
    );
  </script>

</body>

</html>